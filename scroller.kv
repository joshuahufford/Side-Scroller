#:kivy 1.10.0
#:import utils kivy.utils


<ScrollerGame>:
	player: _player
	obstical1: _obstical1

	canvas:
		Color:
			rgba: 0, 0.5, 0, 1
		Rectangle:
			pos: 0, 0
			size: self.width, 25

	Player:
		id: _player
		pos: 0.25 * self.parent.width, 15

	Obstical:
		id: _obstical1
		pos: self.parent.center_x - 5 , 15

<Player>:
	size: 74, 62
	canvas:
		Color:
			rgba: 1, 1, 1, 1
		Rectangle:
			source: 'assets/ball.png'
			pos: self.pos
			size: self.size

<Obstical>
	size: 100, 100
	canvas:
		Color:
			rgba: 1, 1, 1, 1
		Rectangle:
			source: 'assets/white_cloud.png'
			pos: self.pos
			size: self.size