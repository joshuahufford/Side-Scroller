#:kivy 1.10.0
#: import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
	transition: FadeTransition()
	MainScreen:
	GameScreen:

<MainScreen>:
	name: "main"
	Image:
		source: "assets/main_screen.png"
		allow_stretch: True
		keep_ratio: False
		size: root.size
		pos: self.pos
	Button:
		on_release: app.root.current = "game"
		text: "Start"
		background_color: [1,0,0,1]
		color: 1,0,1,1
		font_size: 60
		size_hint: 0.3, 0.2
		pos_hint: {'center_x': .5, 'center_y': .5}

<GameScreen>:
	name: "game"
