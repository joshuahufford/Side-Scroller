#:kivy 1.10.0
#:import utils kivy.utils


<ScrollerGame>:
	player: _player
	obstical1: _obstical1

	canvas:
		Color:
			rgba: 0, 1, 0, 1
		Rectangle:
			pos: 0, 0
			size: self.width, 25

	Player:
		id: _player
		pos: 100, 100

	Obstical:
		id: _obstical1
		pos: self.parent.center_x - 5 , -50
		mainangle: 0
		canvas.before:
			PushMatrix
			Rotate:
				angle: self.mainangle
				origin: self.center
		canvas.after:
			PopMatrix


<Player>:
    size: 20, 20
    canvas:
    	Color:
    		rgba: 0, 0, 1, 1
        Ellipse:
            size: self.size
            pos: self.pos  

<Obstical>
	size: 10, 100
	canvas:
		Color:
			rgba: 1, 1, 1, 1
		Rectangle:
			pos: self.pos
			size: self.size